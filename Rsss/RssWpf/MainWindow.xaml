        <Button x:Name="buttonBYID" Content="ALL NOTE" HorizontalAlignment="Left" Height="41" Margin="708,230,0,0" VerticalAlignment="Top" Width="103" Click="buttonBYID_Click" Grid.Column="3" FontWeight="Bold" BorderThickness="10" Cursor="Hand">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF68FF00" Offset="0.5"/>
                    <GradientStop Color="#FF008306"/>
                    <GradientStop Color="#FF008306" Offset="0.96"/>
                    <GradientStop Color="#FF2DB803" Offset="0.77"/>
                    <GradientStop Color="#FF25AF03" Offset="0.223"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="buttonBYChannelID" Content="BY CHANNEL ID" HorizontalAlignment="Left" Height="39" Margin="708,276,0,0" VerticalAlignment="Top" Width="103" Click="buttonBYChannelID_Click" Grid.Column="3" BorderBrush="Red" FontWeight="Bold" Cursor="Hand">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF68FF00" Offset="0.5"/>
                    <GradientStop Color="#FF008306"/>
                    <GradientStop Color="#FF008306" Offset="0.96"/>
                    <GradientStop Color="#FF2DB803" Offset="0.77"/>
                    <GradientStop Color="#FF25AF03" Offset="0.223"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label x:Name="label" Grid.ColumnSpan="4" Content="SHOW NEWS" HorizontalAlignment="Left" Height="26" Margin="717,154,0,0" VerticalAlignment="Top" Width="86" FontWeight="Bold" FontStyle="Italic">
            <Label.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF8D4D00" Offset="1"/>
                    <GradientStop Color="#FFE28400" Offset="0.49"/>
                    <GradientStop Color="#FF8D4D00"/>
                    <GradientStop Color="#FFE28400" Offset="0.663"/>
                    <GradientStop Color="#FFE28400" Offset="0.333"/>
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <ComboBox x:Name="comboBoxNoticeID" Grid.ColumnSpan="4" HorizontalAlignment="Left" Height="28" Margin="735,43,0,0" VerticalAlignment="Top" Width="140" Cursor="Hand" IsSynchronizedWithCurrentItem="True"    >
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FFC79A00" Offset="0"/>
                    <GradientStop Color="#FFC19500" Offset="1"/>
                    <GradientStop Color="Yellow" Offset="0.517"/>
                    <GradientStop Color="#FFDFC500" Offset="0.107"/>
                    <GradientStop Color="#FFD6B900" Offset="0.92"/>
                    <GradientStop Color="#FFE5D300" Offset="0.767"/>
                    <GradientStop Color="#FFEEE200" Offset="0.677"/>

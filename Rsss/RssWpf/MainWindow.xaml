            </ComboBox.Background>
        </ComboBox>
        <ListView x:Name="listView" Grid.ColumnSpan="4" HorizontalAlignment="Left" Height="311" VerticalAlignment="Top" Width="575" Margin="10,13,0,0" MouseDoubleClick="listView_MouseDoubleClick" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="30" Header="ID"
         DisplayMemberBinding="{Binding NoticeID}"  />
                    <GridViewColumn Width="140" Header="Title"  
         DisplayMemberBinding="{Binding Title}" />
                    <GridViewColumn Width="140" Header="PageLink"
         DisplayMemberBinding="{Binding PageLink}"/>
                    <GridViewColumn Width="140" Header="PublishDate"
         DisplayMemberBinding="{Binding PublishDate}"
 />
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="buttonwysw" Content="BY CHANNEL ID" HorizontalAlignment="Left" Height="39" Margin="752,99,0,0" 
                VerticalAlignment="Top" Width="103" Click="buttonwysw_Click"      Grid.Column="3" BorderBrush="Red" FontWeight="Bold" Cursor="Hand">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF68FF00" Offset="0.5"/>
                    <GradientStop Color="#FF008306"/>
                    <GradientStop Color="#FF008306" Offset="0.96"/>
                    <GradientStop Color="#FF2DB803" Offset="0.77"/>
                    <GradientStop Color="#FF25AF03" Offset="0.223"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Window>

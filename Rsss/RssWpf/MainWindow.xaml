        <Button x:Name="button" Content="TODAY" HorizontalAlignment="Left" Height="41" Margin="708,184,0,0" VerticalAlignment="Top" Width="103" Click="button_Click" Grid.Column="3" BorderBrush="Red" IsDefault="True" FontWeight="Bold" Cursor="Hand">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF68FF00" Offset="0.5"/>
                    <GradientStop Color="#FF008306"/>
                    <GradientStop Color="#FF008306" Offset="0.96"/>
                    <GradientStop Color="#FF2DB803" Offset="0.77"/>
                    <GradientStop Color="#FF25AF03" Offset="0.223"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <ComboBox x:Name="comboBoxChannelID" Grid.ColumnSpan="4" HorizontalAlignment="Left" Height="28" Margin="590,43,0,0" VerticalAlignment="Top" Width="140" Cursor="Hand">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FFC79A00" Offset="0"/>
                    <GradientStop Color="#FFC19500" Offset="1"/>
                    <GradientStop Color="Yellow" Offset="0.517"/>
                    <GradientStop Color="#FFDFC500" Offset="0.107"/>
                    <GradientStop Color="#FFD6B900" Offset="0.92"/>
                    <GradientStop Color="#FFE5D300" Offset="0.767"/>
                    <GradientStop Color="#FFEEE200" Offset="0.677"/>
                    <GradientStop Color="#FFF5EE00" Offset="0.397"/>
                    <GradientStop Color="#FFEDDF00" Offset="0.297"/>
                    <GradientStop Color="#FFE5D100" Offset="0.2"/>
